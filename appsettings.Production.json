{
    "Serilog":  {
        "Using": [ "Serilog.Sinks.Console" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft.*": "Error",
                "System": "Error"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{Context}>({Application}/{MachineName}/{ThreadId}){NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/makerverse.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/makerverse.json",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ],
        "Properties": {
            "ApplicationName": "Makerverse"
        }
    }
}
