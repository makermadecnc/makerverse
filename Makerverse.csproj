<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
    <TypeScriptToolsVersion>Latest</TypeScriptToolsVersion>
    <IsPackable>false</IsPackable>
    <SpaRoot>App\</SpaRoot>
    <DefaultItemExcludes>$(DefaultItemExcludes);$(SpaRoot)node_modules\**</DefaultItemExcludes>
    <PackageVersion>1.1.3</PackageVersion>
    <Title>Makerverse</Title>
    <Authors>OpenWorkShop &amp; MakerMade</Authors>
    <PackageProjectUrl>http://makerverse.com</PackageProjectUrl>
    <Nullable>enable</Nullable>
    <LangVersion>9</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ElectronNET.API" Version="9.31.2" />
    <PackageReference Include="HotChocolate.AspNetCore" Version="11.0.8" />
    <PackageReference Include="HotChocolate.AspNetCore.Authorization" Version="11.0.8" />
    <PackageReference Include="Microsoft.AspNetCore.SpaServices.Extensions" Version="5.0.1" />
    <PackageReference Include="SemanticVersion" Version="2.1.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="3.4.1-dev-00188" />
    <PackageReference Include="Serilog.Enrichers.Environment" Version="2.2.0-dev-00761" />
    <PackageReference Include="Serilog.Enrichers.Process" Version="2.0.2-dev-00741" />
    <PackageReference Include="Serilog.Enrichers.Thread" Version="3.2.0-dev-00747" />
    <PackageReference Include="Serilog.Exceptions" Version="6.0.0" />
    <PackageReference Include="Serilog.Settings.Configuration" Version="3.2.0-dev-00257" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.0-dev-00839" />
    <PackageReference Include="System.IO.Ports" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <ProjectReference Include="..\OpenController\OpenController.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(BuildingInsideVisualStudio)'=='true'">
    <Reference Include="OpenController, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null">
      <HintPath>Plugins\$(Configuration)\OpenController.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <!-- Don't publish the SPA source files, but do show them in the project files list -->
    <Content Remove="$(SpaRoot)**" />
    <None Remove="$(SpaRoot)**" />
    <None Include="$(SpaRoot)**" Exclude="$(SpaRoot)node_modules\**" />
    <None Remove="output\**" />
    <Content Remove="output\**" />
    <None Include="App\public\i18n\cs\controller.json" />
    <None Include="App\public\i18n\cs\gcode.json" />
    <None Remove="src\**" />
    <Content Remove="src\**" />
    <None Remove="server\**" />
    <Content Remove="server\**" />
    <None Remove="electron-build\**" />
    <Content Remove="electron-build\**" />
    <None Remove="dist\**" />
    <Content Remove="dist\**" />
    <None Remove="MakerverseServerTests\**" />
    <Content Remove="MakerverseServerTests\**" />
    <None Remove="logs\**" />
    <Content Remove="logs\**" />
    <None Remove="App\**" />
    <Content Remove="App\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="App\**" />
    <Compile Remove="output\**" />
    <Compile Remove="src\**" />
    <Compile Remove="server\**" />
    <Compile Remove="electron-build\**" />
    <Compile Remove="dist\**" />
    <Compile Remove="MakerverseServerTests\**" />
    <Compile Remove="logs\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="output\**" />
    <EmbeddedResource Remove="src\**" />
    <EmbeddedResource Remove="server\**" />
    <EmbeddedResource Remove="electron-build\**" />
    <EmbeddedResource Remove="dist\**" />
    <EmbeddedResource Remove="MakerverseServerTests\**" />
    <EmbeddedResource Remove="logs\**" />
    <EmbeddedResource Remove="App\**" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="output\**" />
    <_ContentIncludedByDefault Remove="dist\**" />
    <_ContentIncludedByDefault Remove="logs\**" />
    <_ContentIncludedByDefault Remove="App\.prettierrc.json" />
    <_ContentIncludedByDefault Remove="App\package.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\cs\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\cs\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\cs\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\de\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\de\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\de\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\en\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\en\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\en\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\es\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\es\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\es\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\fr\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\fr\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\fr\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\hu\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\hu\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\hu\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\it\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\it\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\it\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\ja\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\ja\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\ja\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\nl\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\nl\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\nl\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\pt-br\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\pt-br\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\pt-br\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\ru\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\ru\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\ru\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\tr\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\tr\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\tr\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\zh-cn\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\zh-cn\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\zh-cn\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\zh-tw\controller.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\zh-tw\gcode.json" />
    <_ContentIncludedByDefault Remove="App\public\i18n\zh-tw\resource.json" />
    <_ContentIncludedByDefault Remove="App\public\manifest.json" />
    <_ContentIncludedByDefault Remove="App\tsconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="App\src\**\*.ts" />
    <TypeScriptCompile Include="App\src\**\*.tsx" />
  </ItemGroup>

  <Target Name="DebugEnsureNodeEnv" BeforeTargets="Build" Condition=" '$(Configuration)' == 'Debug' And !Exists('$(SpaRoot)node_modules') ">
    <!-- Ensure Node.js is installed -->
    <Exec Command="node --version" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="Node.js is required to build and run this project. To continue, please install Node.js from https://nodejs.org/, and then restart your command prompt or IDE." />
    <Message Importance="high" Text="Restoring dependencies using 'npm'. This may take several minutes..." />
    <Exec WorkingDirectory="$(SpaRoot)" Command="npm install" />
  </Target>

  <Target Name="PublishRunWebpack" AfterTargets="ComputeFilesToPublish">
    <!-- As part of publishing, ensure the JS resources are freshly built in production mode -->
    <Exec WorkingDirectory="$(SpaRoot)" Command="npm install" />
    <Exec WorkingDirectory="$(SpaRoot)" Command="npm run build" />

    <!-- Include the newly-built files in the publish output -->
    <ItemGroup>
      <DistFiles Include="$(SpaRoot)build\**; $(SpaRoot)build-ssr\**" />
      <ResolvedFileToPublish Include="@(DistFiles->'%(FullPath)')" Exclude="@(ResolvedFileToPublish)">
        <RelativePath>%(DistFiles.Identity)</RelativePath>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
        <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      </ResolvedFileToPublish>
    </ItemGroup>
  </Target>

</Project>
