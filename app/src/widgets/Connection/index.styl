.widget-content {
    position: relative;
    padding: 10px;

    &.hidden {
        display: none;
    }
}

.widget-content {
    :global {
        .Select.sm {
            .Select-control {
                height: 30px;
                border-radius: 3px;

                .Select-value {
                    line-height: 28px;
                }
            }
            .Select-placeholder {
                line-height: 28px;
            }
            .Select-input {
                height: 28px;
            }
        }

        .input-group > .Select:not(:last-child) .Select-control {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }
        .input-group > .Select:not(:first-child) .Select-control {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
    }
}

.well {
    min-height: 22px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    background-color: #f5f5f5;
    border: 1px solid #e3e3e3;
    border-radius: 3px;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05);
    margin-bottom: 0;
    padding: 0 5px;
}