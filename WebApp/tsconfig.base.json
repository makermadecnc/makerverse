{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "jsx": "react-jsx",
    "module": "esnext",
    "declaration": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "strict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"],
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "node_modules",
    "/node_modules",
    "out",
    "bin",
    "build",
    "dist",
    "*.d.ts"
  ]
}